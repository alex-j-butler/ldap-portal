{% if Flash.SuccessMsg %}
    <div class="notification is-success">
        <button class="delete flash-delete"></button>
        {{ Flash.SuccessMsg }}
    </div>
{% endif %}

{% if Flash.ErrorMsg %}
    {% for msg in Flash.ErrorMsg|split:"//n" %}
        {% if msg %}
            <div class="notification is-danger">
                <button class="delete flash-delete"></button>
                {{ msg }}
            </div>
        {% endif %}
    {% endfor %}
{% endif %}

